{
    "name": "phlatson/phlatson",
    "type": "library",
    "description": "Phlatson CMS",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "keywords": [
        "phlatson",
        "cms",
        "cmf",
        "content management system",
        "flat file",
        "JSON"
    ],
    "license": "MPL-2.0",
    "homepage": "https://phlatson.io",
    "authors": [
        {
            "name": "Adam Spruijt",
            "email": "adam@spruijt.design",
            "homepage": "https://spruijt.design",
            "role": "Creator"
        }
    ],
    "autoload": {
        "psr-4": {
            "Phlatson\\": "Phlatson/"
        }
    },
    "require": {
        "php": ">=7.4.0",
        "digitalnature/php-ref": "^1.2",
        "scrivo/highlight.php": "v9.12.0.3",
        "filp/whoops": "^2.3",
        "erusev/parsedown": "^1.7",
        "itsgoingd/clockwork": "^4.1",
        "symfony/var-dumper": "^5.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "kint-php/kint": "^3.3"
    },
    "config": {
        "optimize-autoloader": true
    }
}
